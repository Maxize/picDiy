<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scaleType="fitXY" >

    <ImageView
        android:id="@+id/topBar"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/top_bar" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="70dp"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/flag" />

    <RelativeLayout
        android:id="@+id/left_bg"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="60dp"
        android:layout_toLeftOf="@id/logo"
        android:background="@drawable/base01" >

        <ImageView
            android:id="@+id/level_bg"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/level" />

        <TextView
            android:id="@+id/level_tx"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/i_level"
            android:textColor="#ffffff"
            android:textSize="28sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/right_bg"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@id/logo"
        android:background="@drawable/base01" >

        <ImageButton
            android:id="@+id/btn_info"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:src="@xml/btn_info" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/center_bg"
        android:layout_width="300dp"
        android:layout_height="220dp"
        android:layout_below="@id/left_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/base02" >

        <ImageButton
            android:id="@+id/btn_play"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:src="@xml/btn_play" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/spread_bg"
        android:layout_width="320dp"
        android:layout_height="80dp"
        android:layout_below="@id/center_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/base08" >

        <RelativeLayout
            android:id="@+id/wechat_rl"
            android:layout_width="160dp"
            android:layout_height="80dp" >

            <ImageButton
                android:id="@+id/btn_wechat"
                android:layout_width="110dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="-20dp"
                android:background="#00000000"
                android:src="@xml/btn_wechat" />

            <ImageView
                android:id="@+id/tx_wechat"
                android:layout_width="52dp"
                android:layout_height="16dp"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/text_officalwechat" />

            <ImageView
                android:id="@+id/tx_cg"
                android:layout_width="36dp"
                android:layout_height="20dp"
                android:layout_below="@id/tx_wechat"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/text_cg" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fkcg"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@id/wechat_rl" >

            <ImageButton
                android:id="@+id/btn_fkcg"
                android:layout_width="110dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="-20dp"
                android:background="#00000000"
                android:src="@xml/btn_fkcg" />

            <ImageView
                android:id="@+id/tx_fkcg"
                android:layout_width="50dp"
                android:layout_height="26dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="80dp"
                android:background="@drawable/text_fkcg" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom_bg"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_bar" >

        <ImageView
            android:id="@+id/img_music"
            android:layout_width="14dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/music" />

        <ImageButton
            android:id="@+id/btn_music"
            android:layout_width="48dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/img_music"
            android:background="#00000000"
            android:src="@xml/btn_music" />

        <ImageView
            android:id="@+id/img_rank_tip"
            android:layout_width="24dp"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/badge" />

        <TextView
            android:id="@+id/tx_rank"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="right|center_vertical"
            android:text="@string/tx_rank"
            android:textColor="#ffffff"
            android:textSize="12sp" />
    </RelativeLayout>

</RelativeLayout>